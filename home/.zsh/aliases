### Common Locations
alias c='cd ~/_code'
alias ws='cd ~/workspaces'
alias ews='cd ~/eworkspaces'
alias millarts='cd ~/Dropbox/millarts'

### Misc
alias make-ssh-key='ssh-keygen -t ecdsa -b 521 -C "$(whoami)@$(hostname)-$(date -I)"'
#alias ack='ack-grep'

### Network stuff
alias servedir="python -m SimpleHTTPServer"

### Grails Testing Weirdness
function grailsTestOrder() { grep testsuite target/test-reports/TESTS-TestSuites.xml | grep -v testsuites | cut -d\  -f8-9 | sed -E 's/name="(.*)" package="(.*)"/\2.\1/' | grep .  }
alias testorder=grailsTestOrder

### Progress for copy
alias cpb='rsync -rv $1 $2 --progress'

### Media
alias npr='mplayer -playlist http://207.245.67.209/91FM.m3u'
alias kittehs='chromium http://www.fortlangley.com/kittens'

### Ruby
alias jewelme="jeweler --rspec --bundler --cucumber --summary 'CHANGEME' --description 'CHANGEME' --rdoc "

### Vagrant
alias vagdebug='export VAGRANT_LOG=debug'
alias vaginfo='export VAGRANT_LOG=info'
