# Aliases

# An alias ending in a space allows the next word on the command line to be alias expanded as well.
alias sudo="sudo "

# Frequent tools (document these)
alias -g L='|less'
alias -g T='|tail'
alias -g H='|head'
alias -g V='|vim -'
alias -g B='&>/dev/null &'
alias -g D='&>/dev/null &|'
alias -g LC='|tee lastcommand.log'
alias -g E=' 2>&1 | tee lastcommand.log'

# Common Locations
alias c='cd ~/_code'
alias ws='cd ~/workspaces'

# Misc
alias make-ssh-key='ssh-keygen -t ecdsa -b 521 -C "$(whoami)@$(hostname)-$(date -I)"'
alias servedir="python -m SimpleHTTPServer"
alias npr='mplayer -playlist http://207.245.67.209/91FM.m3u'

