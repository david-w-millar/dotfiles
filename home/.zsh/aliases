#alias cd/='cd /'
#alias vi='vim'

alias -g L='|less'
alias -g T='|tail'
alias -g H='|head'
alias -g V='|vim -'
alias -g B='&>/dev/null &'
alias -g D='&>/dev/null &|'
alias -g LC='|tee lastcommand.log'
alias -g E=' 2>&1 | tee lastcommand.log'

### Tmux
alias tmux="tmux -2"

### System Debugging
alias logtail='tail -f /var/log/dmesg'

