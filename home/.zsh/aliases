### Common Locations
alias ws='cd ~/workspaces'

### Misc
alias make-ssh-key='ssh-keygen -t ecdsa -b 521 -C "$(whoami)@$(hostname)-$(date -I)"'
#alias ack='ack-grep'

### Network stuff
alias servedir="python -m SimpleHTTPServer"


### Progress for copy
alias cpb='rsync -rv $1 $2 --progress'

### Media
alias npr='mplayer -playlist http://207.245.67.209/91FM.m3u'

